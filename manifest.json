{
	"manifest_version": 2,
	"name": "Tab Renamer",
	"version": "1.0",
	"description": "Allows you to rename tabs",
	
	"permissions": [
		"activeTab",
		"tabs", 
		"menus",
		"storage",
		"<all_urls>"
	],
	
	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["tab_renamer.js"]
		}
	]
}